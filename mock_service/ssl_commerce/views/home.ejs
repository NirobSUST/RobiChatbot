<html>

<head>
    <title>Login</title>
    <style>
        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
        }

        input {
            margin: 10px;
        }

        body{
            background-color: #dc3545;
        }

        .form-body{
            background-color: #1111;
            display: grid;
            padding: 50px;
        }

        .btn{
            height: 40px;
            background: black;
            color: white;
        }

        input{
            padding: 10;
            margin: 0;
            height: 40px;
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <form action="/submit" method="POST">
        <div class="form-body">
            <h1>Login</h1>
            <label for="username">Username:</label>
            <input type="text" id="username" name="username">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password">

            <input type="text" id="data_volume" name="data_volume"  value="<%= data_volume %>" hidden>
            <input type="text" id="validity" name="validity" value="<%= validity %>" hidden>
            <input type="text" id="cost" name="cost" value="<%= cost %>" hidden>
            <input type="text" id="num" name="num" value="<%= num %>" hidden>
            <input class="btn" type="submit" value="Submit">
        </div>
    </form>
</body>

</html>