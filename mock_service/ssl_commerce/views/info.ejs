<html>

<head>
    <title>Information</title>
    <style>
        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
        }

        input {
            margin: 10px;
        }

        body{
            background-color: #dc3545;
        }

        .form-body{
            background-color: #1111;
            display: grid;
            padding: 50px 100px 50px 100px;
            
        }

        .btn{
            height: 40px;
            background: black;
            color: white;
        }
        
        input{
            padding: 10;
            margin: 0;
            height: 40px;
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <form action="/information" method="POST">
        <div class="form-body">
            <h1>Information</h1>
            <h1>Hello, <%= username %>!</h1>
            <label for="package_code">Package code:</label>
            <input type="text" id="package_code" name="package_code"  value="<%= package_code %>" >
            
            <label for="data_volume">Data Volume:</label>
            <input type="text" id="data_volume" name="data_volume"  value="<%= data_volume %>" >
            
            <label for="voice_volume">Voice Volume:</label>
            <input type="text" id="voice_volume" name="voice_volume"  value="<%= voice_volume %>" >
            
            <label for="validity">Validity:</label>
            <input type="text" id="validity" name="validity" value="<%= validity %>" >
            
            <label for="cost">Cost:</label>
            <input type="text" id="cost" name="cost" value="<%= cost %>" >
            
            <label for="name">User name:</label>
            <input type="text" id="name" name="name" value="<%= username %>" readonly />

            <!-- <label for="num">Whatsapp number:</label> -->
            <input type="text" id="num" name="num" value="<%= num %>" hidden />
            
            <input class="btn" type="submit" value="Submit">
        </div>
    </form>
</body>

</html>